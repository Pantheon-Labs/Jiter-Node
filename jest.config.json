{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "ts"],
  "testMatch": ["**/*.test.ts"],
  "setupFilesAfterEnv": ["./tests/setupTests.ts"],
  "coveragePathIgnorePatterns": ["/tests"],
  "coverageThreshold": {
    "global": {
      "statements": 0,
      "branches": 0,
      "functions": 0,
      "lines": 0
    }
  }
}
